{
  "$schema": "http://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "alwaysStrict": true,
    "newLine": "LF",
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": false,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "incremental": false,
    "jsx": "react",
    "lib": ["dom", "es5", "es6", "es2015", "es2018", "esnext"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": false,
    "noEmitOnError": true,
    "noImplicitAny": false,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "pretty": true,
    "removeComments": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "stripInternal": true,
    "noImplicitReturns": true,
    "resolveJsonModule": true,
    "target": "esnext",
    "types": ["node", "mocha"],
    "outDir": "./lib"
  },
  "include": [
    "*.js",
    "*.ts",
    "./**/*.d.ts",
    "./**/*.js",
    "./**/*.json",
    "./**/*.jsx",
    "./**/*.ts",
    "./**/*.tsx",
    "./**/*.md",
    "./**/*.mdx"
  ],
  "exclude": ["build", "dist", "lib", "node_modules", "__wip__"]
}
